<%- include('./layouts/publicHeader') %> 
<div class="carousel-upload mb-4">
    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/moon.jpg" class="d-block w-100 img-carousel" alt="...">
            <div class="carousel-caption first d-md-block">
              <p class="display-3 font-weight-bold d-sm-block d-none">"Fantasy"</p>
              <p>Write your own fantasy.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/horror.jpg" class="d-block w-100 img-carousel" alt="...">
            <div class="carousel-caption d-md-block">
            <p class="display-3 font-weight-bold d-sm-block d-none">"Horror"</p>
              <p>Write your Horrror Story.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/romance.jpg" class="d-block w-100 img-carousel" alt="...">
            <div class="carousel-caption d-md-block">
                <p class="display-3 font-weight-bold d-sm-block d-none">"Romance"</p>
              <p>Write your own Romance Story.</p>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
</div>

<p class="h3 text-center">Recent Uploads</p><hr class="hr-underline">

<div class="main-home">
  <div class="book-details">
        <div class="row">
            <% book.forEach(book => { %>
                <div class="col-md-6 col-12 mt-3">
                    <div class="row">
                        <div class="col-sm-5 col-12">
                            <div class="book">
                                <center>
                                  <img class="img-fluid book-img" src="<%= book.coverImagePath %>">
                                </center>
                            </div>
                            <div class="book-name">
                                <p class="book-title mt-3"><%= book.title %></p>
                                <p class="book-head text-secondary"><%= book.name %></p>
                                <p class="small text-muted"><%= book.createdAt.toLocaleDateString() %></p>
                            </div>
                        </div>
                        <div class="col-sm-7 col-6 d-sm-block d-none">
                            <p class="book-description"><%= book.description %> </p>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
    </div>
</div>


 <%- include('./layouts/footer') %> 
  