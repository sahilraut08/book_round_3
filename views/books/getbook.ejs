<%- include('../layouts/header') %> 

<div class="mt-3 main-home">
    <h2 class="text-center book-header">Get Book</h2><hr class="hr-underline">
    <div class="row">
        <div class="col-sm-4 col-12">
            <center>
                <img class="img-fluid book-getimg" src="<%= book.coverImagePath %>">
            </center>
        </div>
        <div class="col-sm-7 col-12">
            <p class="h2 m-3 book-title"><%= book.title %></p>
            <p class="small m-3 text-muted"><%= book.createdAt.toLocaleDateString() %></p>
            <p class="text-secondary m-3 book-head"><%= book.name %></p>
            <p class="m-3 book-head">Genre: <%= book.genre %></p>
            <p class="h3 book-head m-3">Price: Rs.<%= book.price %></p>
            <p class="m-3">
                <span class="book-head">Description: </span><br> 
                <span class="book-description"><%= book.description %></span>
            </p>
            <form class="d-inline" action="/books/purchased/<%= book.id %>" method="POST">
                <button type="submit" class="btn btn-success m-2">Buy Book</button>
            </form>
            <form class="d-inline" action="/books/issue/<%= book.id %>" method="POST">
                <button type="submit" class="btn btn-primary m-2">Issue Book</button>
            </form>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %> 